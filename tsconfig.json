{
  // This configuration is used for local development and type checking.
  "extends": "./tsconfig.base.json",
  "include": ["src", "tests", "tools"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    }
  }
}
